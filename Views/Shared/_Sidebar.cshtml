@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var userRole = HttpContextAccessor.HttpContext.Session.GetInt32("UserRole");
}

<div class="d-flex flex-column flex-shrink-0 p-3 bg-light sidebar">
    <h5 class="fw-bold text-primary">Dashboard</h5>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        @if (userRole == 1) // Admin
        {
            <!-- Nhóm Quản trị viên -->
            <li class="nav-item">
                <a class="nav-link text-dark d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#adminMenu">
                    <i class="bi bi-gear me-2"></i> Quản trị viên
                    <i class="bi bi-chevron-down"></i>
                </a>
                <ul class="collapse list-unstyled ps-3" id="adminMenu">
                    <li>
                        <a href="#" class="nav-link text-dark">
                            <i class="bi bi-person-circle me-2"></i> Quản lý tài khoản
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link text-dark">
                            <i class="bi bi-bank me-2"></i> Quản lý ngân hàng
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link text-dark">
                            <i class="bi bi-cash-stack me-2"></i> Quản lý giao dịch
                        </a>
                    </li>
                </ul>
            </li>

            <!-- Nhóm Người dùng -->
            <li class="nav-item">
                <a class="nav-link text-dark d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#userMenu">
                    <i class="bi bi-person me-2"></i> Người dùng
                    <i class="bi bi-chevron-down"></i>
                </a>
                <ul class="collapse list-unstyled ps-3" id="userMenu">
                    <li>
                        <a href="#" class="nav-link text-dark">
                            <i class="bi bi-house-door me-2"></i> Trang chủ
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link text-dark">
                            <i class="bi bi-credit-card me-2"></i> Giao dịch
                        </a>
                    </li>
                    <li>
                        <a href="/User/Profile" class="nav-link text-dark">
                            <i class="bi bi-person me-2"></i> Hồ sơ
                        </a>
                    </li>
                </ul>
            </li>
        }
        else
        {
            <!-- Người dùng bình thường -->
            <li class="nav-item">
                <a href="#" class="nav-link text-dark">
                    <i class="bi bi-house-door me-2"></i> Trang chủ
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link text-dark">
                    <i class="bi bi-credit-card me-2"></i> Giao dịch
                </a>
            </li>
            <li class="nav-item">
                <a href="/User/Profile" class="nav-link text-dark">
                    <i class="bi bi-person me-2"></i> Hồ sơ
                </a>
            </li>
        }
    </ul>
    <hr>
    <!-- Đăng xuất -->
    <div class="mt-auto">
        <a href="/User/Logout" class="nav-link text-danger">
            <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
        </a>
    </div>
</div>
