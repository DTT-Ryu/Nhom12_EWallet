
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="user-containter">
	<div class="user-box">
		<h2 class="text-center mb-4">Register</h2>
		<form asp-action="Register" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3">
				<label  class="form-label"></label>
				<input  class="form-control" />
				<span class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label  class="form-label"></label>
				<input  class="form-control" />
				<span  class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label  class="form-label"></label>
				<input  class="form-control" />
				<span  class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label  class="form-label"></label>
				<input  class="form-control" />
				<span  class="text-danger"></span>
			</div>
			<input type="submit" class="btn btn-success w-100 p-2" value="Register" />
			<p class="text-center mt-2">
				Already have an account? <a asp-controller="User" asp-action="Login" class="text-decoration-none">Login</a>
			</p>
			<div class="text-center">
				<a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
			</div>

		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
